{
    "version": "2",
    "manifest_version": 2,
    "description": "An example options ui",
    "name": "Unicolour",
    "content_security_policy": "default-src 'self'; script-src 'self'",
    "browser_action": {
        "default_title": "Unicolour",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "popup.html",
        "browser_style": true
    },
    "background": {
        "scripts": [
          "js/main.js"
        ]
    },
    "permissions": [
      "activeTab",
      "storage"
    ],
    "web_accessible_resources":[
        "css/style.css",
        "main.js"
    ]
}